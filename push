#!/bin/bash

# Define your GitHub username and token (or password)
GITHUB_USERNAME="your_username"
GITHUB_TOKEN="fake token"

# Set the GitHub repository URL
REPO_URL="https://github.com/yourusername/yourrepository.git"

# Perform the Git operations
git rm --cached push
git add .                   # Stage all changes
git commit -m "Commit message"   # Commit changes with a message

# Set Git credentials using environment variables
export GIT_USERNAME="$GITHUB_USERNAME"
export GIT_PASSWORD="$GITHUB_TOKEN"

# Push to GitHub with credentials
git push "$REPO_URL"

# Unset Git credentials
unset GIT_USERNAME
unset GIT_PASSWORD

